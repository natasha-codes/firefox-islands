{
  "manifest_version": 2,
  "name": "Tab Islands",
  "version": "0.1.2",
  "description": "A Firefox extension to automatically isolate logins and web trackers.",
  "icons": {
    "48": "icons/island_48x48.png",
    "96": "icons/island_96x96.png",
    "128": "icons/island_128x128.png"
  },
  "homepage_url": "https://github.com/natasha-codes/firefox-tab-islands",
  "applications": {
    "gecko": {
      "id": "@firefox-islands"
    }
  },
  "permissions": [
    "contextualIdentities",
    "cookies",
    "downloads",
    "tabs",
    "storage",
    "<all_urls>",
    "webRequest",
    "webRequestBlocking"
  ],
  "background": {
    "page": "build/background.html"
  },
  "options_ui": {
    "page": "./build/options.html"
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/island_16x16.png",
      "32": "icons/island_32x32.png"
    }
  }
}
