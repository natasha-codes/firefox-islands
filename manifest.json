{
  "manifest_version": 2,
  "name": "Tab Islands",
  "version": "0.1.1",
  "description": "A config-file-based wrapper around Firefox's contextualIdentities API.",
  "icons": {
    "48": "icons/island_48x48.png",
    "96": "icons/island_96x96.png"
  },
  "homepage_url": "https://github.com/natasha-codes/firefox-islands",
  "applications": {
    "gecko": {
      "id": "@firefox-islands"
    }
  },
  "permissions": [
    "contextualIdentities",
    "cookies",
    "tabs",
    "storage",
    "<all_urls>",
    "webRequest",
    "webRequestBlocking"
  ],
  "background": {
    "page": "build/background.html"
  },
  "options_ui": {
    "page": "./build/options.html"
  }
}
